<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/background_list_item"
    >
    <CheckBox
        android:id="@+id/checkbox_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTenNhiemVu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#1eba1e"
            android:text="yen pha hoai"/>
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="3:59 pm 1/11/2017"/>
    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="fitXY"-->
        <!--android:background="#bcb8b8"-->
        <!--android:src="@mipmap/mission_icon"/>-->
    </LinearLayout>
</LinearLayout>